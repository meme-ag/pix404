---
import Layout from '../layouts/Layout.astro';
import { NFTGallery } from '../components/NFTGallery';
import { Image } from '@unpic/qwik';
---

<Layout title="pix404 - Solana NFT Gallery">
  <main>
    <header>
      <h1 class="pixelated-text">pix404</h1>
      <nav>
        <a href="#" class="pixelated-text">home</a>
        <a href="#" class="pixelated-text">profile</a>
        <a href="#" class="pixelated-text">staking</a>
        <a href="#" class="pixelated-text">create</a>
      </nav>
    </header>
    <div class="content">
      <p class="description pixelated-text">
        pixcardio 404 is a mpl-404 token launchpad, converter,<br>
        explorer and the first mpl-404 TB trading bot<br>
        launching soon.
      </p>
      <p class="description pixelated-text">
        users can buy $pix404 and earn lifetime revenue.
      </p>
      <div class="features">
        <span class="pixelated-text">DEX</span>
        <span class="pixelated-text">X</span>
        <span class="pixelated-text">TB</span>
      </div>
      <p class="slogan pixelated-text">
        dont be retarded, buy $pix404, be pixarded.
      </p>
      <Image src="/pixelated-character.png" alt="Pixelated Character" width={200} height={200} class="pixelated-character" />
    </div>
    <NFTGallery />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 2rem;
    max-width: 800px;
    font-family: 'Courier New', monospace;
    color: black;
    text-align: center;
    background-color: white;
  }
  .pixelated-text {
    font-size: 16px;
    line-height: 1.6;
    image-rendering: pixelated;
  }
  header {
    margin-bottom: 2rem;
  }
  h1 {
    font-size: 48px;
    margin-bottom: 1rem;
  }
  nav {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }
  nav a {
    color: black;
    text-decoration: none;
  }
  .content {
    margin-bottom: 2rem;
  }
  .description {
    margin-bottom: 1rem;
  }
  .features {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin: 1rem 0;
  }
  .slogan {
    margin-bottom: 1rem;
  }
  .pixelated-character {
    display: block;
    margin: 0 auto 2rem;
  }
</style>